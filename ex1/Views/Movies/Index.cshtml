@model IEnumerable<ex1.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<table class="table table-bordered table-hover">    
    <thead>      
        <tr>
            <th>Movie Name</th>
            <th>Genre</th>
        </tr>     
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
        <td>@Html.ActionLink(movie.Name,"Details","Movies",new {id = movie.Id }, null)</td>
        <td>@movie.Genre</td>
        </tr>
    }
    </tbody>
</table>